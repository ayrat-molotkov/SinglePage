@model SinglePage.Models.VirtualServerViewModel

<table id="serversTable" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th style="width: 30px">
                VirtualServerId
            </th>
            <th style="width: 60px">
                CreateDateTime
            </th>
            <th style="width: 60px">
                RemoveDateTime
            </th>
            <th style="width: 40px">
                SelectedForRemove
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                CurrentDateTime:
            </td>
            <td id="current-date">                
                @(DateTime.Now.ToString("yyyy.MM.dd HH:mm:ss"))
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                TotalUsageTime:
            </td>
            <td id="total-usage-time">
                
            </td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model.VirtualServers)
        {
            <tr class="virtual-server-item" data-id="@item.VirtualServerId">
                <td>
                    @item.VirtualServerId
                </td>
                <td>
                    @item.CreateDateTime.ToString("yyyy.MM.dd HH:mm:ss")
                </td>
                <td>
                    @(item.RemoveDateTime != null ? item.RemoveDateTime.Value.ToString("yyyy.MM.dd HH:mm:ss") : string.Empty)
                </td>
                <td>
                    <input type="checkbox" class="deleted-checkbox" />
                </td>
            </tr>
        }
    </tbody>
</table>

<button id="add-button">Add new server</button>

<button id="delete-button">Delete marked servers</button>
